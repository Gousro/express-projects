<div class="card mt-4 mb-4 mx-auto">
    <div class="card-body">
        <h4 class="card-title text-center">Login</h4>
        <form action="/usuarios/login" method="POST">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                    placeholder="Digite seu email" required>
                <small id="emailHelp" class="form-text text-muted">NÃ³s nunca compartilharemos seu e-mail com outras
                    pessoas.</small>
            </div>
            <div class="form-group">
                <label for="senha">Senha: </label>
                <input type="password" class="form-control" name="senha" id="senha" placeholder="******" required>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="lembrarMe">
                <label class="form-check-label" for="lembrarMe">Lembrar-me</label>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
</div>
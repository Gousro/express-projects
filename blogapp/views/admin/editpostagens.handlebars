{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card mt-4 mb-4">
    <div class="card-body">
        <h1 class="card-text">Editar postagem</h1>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <div class="form-group">
                <label for="titulo">Título: </label>
                <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo da minha postagem"
                    value="{{postagem.titulo}}" required>
                <small class="text-muted">Digite o titulo de sua postagem</small>
            </div>
            <div class="form-group">
                <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da minha postagem"
                    value="{{postagem.slug}}" required>
                <small class="text-muted">Digite o slug de sua postagem</small>
            </div>
            <div class="form-group">
                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" class="form-control"
                    placeholder="Descrição da minha postagem" value="{{postagem.descricao}}" required>
                <small class="text-muted">Digite a descrição de sua postagem</small>
            </div>
            <div class="form-group">
                <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" id="conteudo" rows="3" class="form-control"
                    required>{{postagem.conteudo}}</textarea>
                <small class="text-muted">Digite o conteúdo de sua postagem</small>
            </div>
            <div class="form-group">
                <label for="categoria">Categoria: </label>
                <select class="custom-select" name="categoria" id="categoria">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada.</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
        <form action="/admin/postagens/deletar" method="POST">
            <input type="hidden" name="id" id="id" value="{{postagem._id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
        </form>
    </div>
</div>